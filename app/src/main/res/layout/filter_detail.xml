<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <include layout="@layout/separator_line" />

        <include
            android:id="@+id/filterWiFiBand"
            layout="@layout/filter_wifi_band"
            android:visibility="visible" />

        <include
            android:id="@+id/filterStrength"
            layout="@layout/filter_strength"
            android:visibility="visible" />

        <include
            android:id="@+id/filterSecurity"
            layout="@layout/filter_security"
            android:visibility="visible" />

    </LinearLayout>
</ScrollView>